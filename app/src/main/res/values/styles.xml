<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    TextView style     -->
    <style name="TextViewPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:textAppearance">@style/TextAppearancePrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

            <style name="TextViewPrimary.Color_black">
                <item name="android:textColor">@color/black</item>
            </style>

            <style name="TextViewPrimary.Font_20sp">
                <item name="android:textAppearance">@style/TextAppearancePrimary.TextSize_20sp</item>
            </style>

            <style name="TextViewPrimary.Font_28sp">
                <item name="android:textAppearance">@style/TextAppearancePrimary.TextSize_28sp</item>
            </style>

            <style name="TextViewPrimary.ThinPrimary">
                <item name="fontFamily">@font/nunito_sans_extralight</item>
            </style>

                    <style name="TextViewPrimary.ThinPrimary.Color_black">
                        <item name="android:textColor">@color/black</item>
                    </style>

                    <style name="TextViewPrimary.ThinPrimary.Font_20sp">
                        <item name="android:textAppearance">@style/TextAppearancePrimary.TextSize_20sp</item>
                    </style>


    <!--    ImageButton style     -->
    <style name="ImageButtonStyle">
        <item name="android:layout_width">@dimen/size_48dp</item>
        <item name="android:layout_height">@dimen/size_48dp</item>
        <item name="android:background">@color/transparent</item>
    </style>


<!--    Text style  -->
    <style name="TextAppearancePrimary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

            <style name="TextAppearancePrimary.TextSize_20sp">
                <item name="android:textSize">@dimen/text_size_20sp</item>
            </style>

            <style name="TextAppearancePrimary.TextSize_28sp">
                <item name="android:textSize">@dimen/text_size_28sp</item>
            </style>

</resources>